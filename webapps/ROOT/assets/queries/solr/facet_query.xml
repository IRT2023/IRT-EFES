<?xml version="1.0" encoding="utf-8"?>
<query q_fields="document_type" range_fields="origin_date">
  <df default="true">text</df>
  <q default="true">*</q>
  <document_type>(epidoc)</document_type>
  <facet>true</facet>
  <!--  <facet.field>dating_criteria</facet.field> -->
  <facet.field>findspot_upper_level</facet.field>
  <facet.field>findspot_intermediate_level</facet.field>
  <facet.field>findspot_lower_level</facet.field>
  <!--<facet.field>findspot</facet.field>-->
  <!--<facet.field>place_of_origin</facet.field>-->
  <facet.field>source_repository</facet.field>
  <!--<facet.field>last_recorded_location</facet.field>-->
  <facet.field>support_material</facet.field>
  <facet.field>support_object_type</facet.field>
  <facet.field>execution_technique</facet.field>
  <facet.field>text_type</facet.field>
  <facet.field>language</facet.field>
  <!--<facet.field>direction_of_the_text</facet.field>-->
  <!--<facet.field>verse_line</facet.field>-->
  <!--<facet.field>previously_unpublished</facet.field>-->
  <!--<facet.field>mentioned_places</facet.field>-->
  <!--<facet.field>mentioned_people</facet.field>-->
  <facet.limit>-1</facet.limit>
  <facet.mincount>1</facet.mincount>
  <!-- facet.sort's value may be either "index" (alphabetic order of
       value) or "count" (numeric order of count). -->
  <facet.sort>index</facet.sort>
  <!-- The number of rows returned by Solr at once (that is the number
       displayed per page of results). -->
  <rows default="true">3000</rows>
</query>
